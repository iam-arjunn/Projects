{
    "id": "requesterform",
    "schemaVersion": "1.1.0",
    "name": "RequesterForm",
    "revision": "1",
    "type": "task",
    "readOnly": false,
    "content": [
        {
            "id": "kindly_provide_following_details",
            "type": "section",
            "title": "kindly provide Following Details",
            "content": [
                {
                    "id": "type_",
                    "type": "string",
                    "label": "Ticket Type",
                    "readOnly": true,
                    "value": "${context.ticketType}",
                    "control": {
                        "type": "Dropdown",
                        "properties": {
                            "items": [
                                {
                                    "value": "NewLaptop",
                                    "displayValue": "New Laptop"
                                },
                                {
                                    "value": "SoftwareInstallation",
                                    "displayValue": "Software Installation"
                                },
                                {
                                    "value": "HardwareProblem",
                                    "displayValue": "Hardware Problem"
                                },
                                {
                                    "value": "SystemUpdate",
                                    "displayValue": "System Update"
                                },
                                {
                                    "value": "Others",
                                    "displayValue": "Others"
                                }
                            ]
                        }
                    },
                    "constraints": {
                        "required": true,
                        "enum": [
                            "NewLaptop",
                            "SoftwareInstallation",
                            "HardwareProblem",
                            "SystemUpdate",
                            "Others"
                        ]
                    }
                },
                {
                    "id": "description",
                    "type": "string",
                    "label": "Description",
                    "placeholder": "Provide the description",
                    "readOnly": false,
                    "value": "${context.description}",
                    "control": {
                        "type": "TextArea",
                        "properties": {
                            "height": "medium"
                        }
                    },
                    "constraints": {
                        "required": false
                    }
                }
            ]
        }
    ],
    "decisions": [
        {
            "id": "submit",
            "text": "Submit",
            "decisionType": "positive"
        },
        {
            "id": "cancel",
            "text": "Cancel",
            "decisionType": "negative"
        }
    ]
}